package project;

import java.io.*;
import java.util.*;

public class Address {
	
	float amount;
	static float balance = 1000;
	public void readFromFile(){
		try {
			  File x = new File("account.txt");
			  Scanner sc = new Scanner(x);
			  String input = sc.next();
			  System.out.println(input);
			  sc.close();			  
		}		
		catch (FileNotFoundException e) {
			System.out.println("Error");
		}		
	}
	
	public void writeToFile(float output){
		try {
		    Formatter f = new Formatter("account.txt");
		    f.format("%s", output);		    
		    f.close();    
		} catch (Exception e) {
		    System.out.println("WriteError");
		}
	}
	
	public void withdraw(float a)
	{
		String request = "How much would you like to withdraw?";
		Scanner sc = new Scanner(System.in);
		
		float input = sc.nextFloat();
		a = input;
		amount = a;
		
		if (amount < balance){
			amount -= balance;
			writeToFile(balance);
		
		
		
	}
}
}
